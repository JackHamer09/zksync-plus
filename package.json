{
  "name": "zksync-dapp-portal",
  "description": "zkSync Portal provides all the required tools for working with Era and Lite networks such as Wallet, Bridge & Faucet functionality",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "test:unit": "vitest --environment jsdom",
    "test:unit:ci": "TZ=UTC-3 vitest --environment jsdom --run",
    "generate": "nuxt generate && npm run generate-meta",
    "generate-meta": "ts-node --transpile-only --compiler-options '{\"module\":\"CommonJS\"}' scripts/updateBridgeMetaTags.ts",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prepare": "husky install",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore --no-error-on-unmatched-pattern --max-warnings=0"
  },
